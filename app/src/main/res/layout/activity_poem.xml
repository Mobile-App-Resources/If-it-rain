<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/back_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="4dp"
        android:elevation="4dp"
        android:src="@drawable/icon_poem_round"
        android:background="@drawable/back_food_icon"
        android:layout_height="64dp" />

    <android.support.v7.widget.CardView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연탄재 함부로 밟지 마라"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/writerText"
                android:layout_marginTop="4dp"
                android:layout_alignRight="@id/titleText"
                android:layout_below="@id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="윤동주"/>

            <ImageButton
                android:id="@+id/speakButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_speak"
                android:elevation="4dp"
                android:background="@drawable/back_call_shape"
                android:layout_margin="4dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:scrollbars = "vertical"
                android:layout_marginTop="4dp"
                android:layout_below="@id/writerText"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/contentText"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_above="@id/speakButton"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>